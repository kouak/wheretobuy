<%= stylesheet('users/show') %>
<% content_for :profile_tabs do -%>
<%= user_tabs('User') %>
<% end -%>
<% content_for :profile_main do -%>
<% title "User - " + h(@user), false %>
<div id="profile-picture"><%= image_tag 'blank-profile-150x150.png', :height => 80 %></div>

<h1><%=h @user %></h1>
<span id="activity">Activity : 123,346</span><br />
<span id="comments-count"><%= link_to "#{number_with_delimiter(@user.comments_count.to_i)} comments", '#' %></span><br />

<% if current_user && current_user.can_request_friendship?(@user) %>
<span id="request-friendship"><%= button_to 'caca' %></span>
<% end %>

<p>
  <strong>Sex:</strong>
  <%= user_sex_to_s(@user)%>
</p>

<p>
  <strong>Last seen:</strong>
  <%= @user.last_request_at ? time_ago_in_words(@user.last_request_at) : 'never' %>
</p>

<p>
  <strong>Location:</strong>
  <%= user_location_to_s(@user) %>
</p>

<% if can_edit?(@user) %>
<p>
  <%= link_to "Edit", edit_account_path %>
</p>
<% end -%>

<hr />
<h2>Comments (<%= @user.comments_count.to_i %>)</h2>
<%= render :partial => "comments/comment", :locals => {:commentable => @user}, :collection => @comments %>
<% if @user.comments_count.to_i > @comments.count %>
  <%= link_to 'See more', user_comments_path(@user) %>
<% end -%>
<% end -%>
<% content_for :profile_sidebar do -%>
CACABOUDIN !

<% end -%>
