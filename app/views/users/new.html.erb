<% title 'Sign Up' -%>

<% semantic_form_for @user do |f| -%>
  <%= f.error_messages %>
  <%= f.input :email %>
  <%= f.input :username %>
  <%= f.input :sex, :as => :select, :collection => [["Male", false], ["Female", true]]%>
  <%= f.input :password %>
  <%= f.input :password_confirmation %>
  <%= f.submit "Sign Up" %>
<% end -%>
