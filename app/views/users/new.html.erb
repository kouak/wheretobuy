<% title 'Sign Up' -%>

<% semantic_form_for @user do |f| -%>
  <%= f.error_messages %>
  <% f.inputs do %>
    <%= f.input :email %>
    <%= f.input :username %>
    <%= f.input :sex, :as => :radio, :collection => [["Male", User::MALE], ["Female", User::FEMALE]] %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
    <%= f.submit "Sign up" %>
  <% end %>
<% end -%>
