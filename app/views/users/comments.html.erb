<% content_for :profile_tabs do -%>
<%= user_tabs('Comments') %>
<% end -%>
<% content_for :profile_main do -%>
<% stylesheet('pagination') %>
<%= user_title 'Comments' %>
<%= will_paginate @comments, :id => 'main-pagination' %>
<hr />
<% if !@comments.nil? %>
  <%= render :partial => 'comments/comment', :locals => {:commentable => @user}, :collection => @comments %>
<% else %>
  <%= "Aucun commentaire" %>
<% end %>

<%= render :partial => 'comments/form', :locals => {:commentable => @user} %>
<% end -%>