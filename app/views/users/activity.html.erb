<% content_for :profile_main do -%>
  <% stylesheet('pagination', 'activities/base') %>
  <%= user_title 'Activity' %>
  <hr />
  <% @activities.to_a.each do |activity| %>
    <%= big_activity(activity) %>
  <% end -%>
  <%= link_to 'See more', :params => {:page => (params[:page] || 1).to_i + 1} %>
<% end -%>