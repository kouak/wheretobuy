<% semantic_remote_form_for (defined?(comment) && comment.new_record? == false) ? comment : [commentable, defined?(comment) ? comment : Comment.new] do |f| %>
<% 
# In the first case, we have an edit form, in the second case, this is a new form called from nested resource
%>
  <% f.inputs 'Add a comment' do -%>
    <%= f.input :body, :label => false, :class => 'autogrow', :input_html => {:rows => 5, :cols => nil} %>
  <% end -%>
  <% f.buttons do -%>
    <%= f.submit %>
  <% end -%>
<% end %>