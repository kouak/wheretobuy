<% title 'Sign Up' -%>

<% semantic_form_for :user, @user, :url => { :action => "create" }do |f| -%>
  <%= f.error_messages %>
  <% f.inputs 'Login details' do -%>
    <%= f.input :email, :hint => 'Please provide valid email' %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
  <% end -%>
  <% f.inputs 'About you' do -%>
    <%= f.input :username %>
    <%= f.input :birthday %>
    <%= f.input :sex, :as => :radio, :collection => [["Male", User::MALE], ["Female", User::FEMALE]] %>
  <% end -%>
  <% f.buttons do -%>
    <%= f.submit :submit, :label => 'Sign up' %>
  <% end -%>
<% end -%>
