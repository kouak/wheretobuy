<h2>Sign in</h2>
Don't have an account yet ? <%= link_to 'Register here !', new_account_path %>
<% semantic_form_for @user_session do |f| -%>
  <% f.inputs do -%>
    <%= f.input :email %>
    <%= f.input :password %>
  <% end -%>
  <% f.buttons do -%>
    <%= f.submit "Sign in" %>
    <%= link_to 'Forgot your password ?', new_password_resets_path %>
  <% end -%>
<% end -%>

