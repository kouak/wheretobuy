<h2>Sign in</h2>
<% semantic_form_for @user_session, :url => user_session_path do |f| -%>
  <%= f.error_messages %>
  <% f.inputs do -%>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :remember_me, :label => "Remember me", :as => :boolean %>
  <% end -%>
  <% f.buttons do %>
    <%= f.submit "Sign in" %>
  <% end %>
<% end %>