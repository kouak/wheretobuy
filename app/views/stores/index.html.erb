<% title "Stores" %>

<table>
  <tr>
    <th>Name</th>
    <th>Url</th>
    <th>Address</th>
    <th>City</th>
    <th>Online Shop</th>
  </tr>
  <% for store in @stores %>
    <tr>
      <td><%=h store.name %></td>
      <td><%=h store.url %></td>
      <td><%=h store.address %></td>
      <td><%=h store.city_id %></td>
      <td><%=h store.online_shop %></td>
      <td><%= link_to "Show", store %></td>
      <td><%= link_to "Edit", edit_store_path(store) %></td>
      <td><%= link_to "Destroy", store, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Store", new_store_path %></p>
