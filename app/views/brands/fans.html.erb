<% content_for :profile_tabs do -%>
<%= brand_tabs('Fans') %>
<% end -%>
<% stylesheet('profile/fans', 'pagination') 
%>
<%= brand_title 'Fans' %>
<%= will_paginate @fans, :id => 'main-pagination' %>
<hr />
<div id="fan-list">
  <% for fan in @fans %>
    <div class="vcard">
      <div class="picture-wrapper">
        <%= link_to(image_tag('blank-profile-150x150.png', :width => "80", :height => "80"), fan) %>
      </div>
      <div class="infos">
        <h3><%= link_to h(fan.to_s), fan %></h3>
        <span class="user-infos">
          22, Reims, France
        </span>
        <span class="custom-infos">
          4 hours ago.
        </span>
      </div>
    </div>
  <% end -%>
</div>