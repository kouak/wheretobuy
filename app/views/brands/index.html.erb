<% title "Find brands" %>
<%= stylesheet 'brands/index' %>

<div id="brands-left-column">
  <div id="brands-search">
    <h3>Search brands</h3>
    <% search_box %>
  </div>

  <div id="brands-taglist">
    <ul>
      <li>All</li>
      <% @top_tags.sort{|t1, t2| t1.name <=> t2.name}.each do |tag| -%>
      <li><%= link_to(tag.to_s.downcase, '#') %></li>
      <% end -%>
    </ul>
    <br />
  </div>
  <div id="brands-list">
    <% for brand in @brands %>
      <div class="brand">
        <span class="brand-picture">
          <%= image_tag 'blank-profile-150x150.png', :width => "80", :height => "80" %>
        </span>
        <h3><%= link_to h(brand.name), brand %></h3>
        <span class="score">
          <%= number_with_delimiter(brand.pageviews.to_i) %> pageviews, <%= number_with_delimiter(brand.fans_count.to_i) %> fans
        </span>
      </div>
    <% end %>
    <p><%= link_to "New Brand", new_brand_path %></p>
  </div>
</div>

<div id="recommendations">
  <h3>See recommendations :</h3>
  <% for brand in @brands %>
    <div class="recommendation">
      <%= link_to h(brand.name), brand %>
    </div> 
  <% end %>
</div>
