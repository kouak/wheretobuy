<% title "Brand Wiki", false %>
<% content_for :profile_tabs do %>
  <%= brand_tabs('Wiki') %>
<% end -%>
<% content_for :profile_main do %>
  <%= brand_title 'Wiki' %>
  <% 
  # Ugly hack to force new input
  @brand_wiki.version_comment = nil 
  %>
  <hr />
  <% semantic_form_for :brand_wiki, @brand_wiki, :url => brand_brand_wiki_path(@brand), :html => { :method => :put } do |f| %>
    <%= f.error_messages %>
    <% f.inputs do %>
      <%= f.input :bio %>
      <%= f.input :version_comment %>
    <% end %>
    <%= f.submit %>
  <% end %>
<% end -%>